@{
    ViewData["Title"] = "Checkout";
}
    <div align="left">
        <h2>
            <img class="" src="~/images/viajanet_logo.JPG" />
           
        </h2>
    </div>
    <h3> Checkout - Informações da Compra</h3>
    <div class="container">
       

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Últimos alertas</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>
                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Pacote | 5 Noites</h6>
                            <small class="text-muted">Rio de Jnaiero</small>
                        </div>
                        <span class="text-muted">R$514,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Pacote | 5 Noites</h6>
                            <small class="text-muted">Florianópolis</small>
                        </div>
                        <span class="text-muted">R$533,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Pacote | 5 Noites</h6>
                            <small class="text-muted">Foz do Iguaçu</small>
                        </div>
                        <span class="text-muted">R$542,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Pacote | 5 Noites</h6>
                            <small>Gramado</small>
                        </div>
                        <span class="text-success">R$614,00</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (BRL)</span>
                        <strong>R$1000,00</strong>
                    </li>
                </ul>

                <form class="card p-2">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Código Promocional">
                        <div style="clear:both;"></div>
                        <div class="input-group-append" style="padding:10px 10px 10px 10px;">
                            <button type="submit" class="btn btn-secondary">Ativar Promoção</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="row">Dados de compra</h4>
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3" style="padding:15px 0px 0px 0px;">
                            <label for="primeironome">Primeiro nome</label>
                            <input type="text" class="form-control" id="firstName" placeholder="" value="" required>

                        </div>
                        <div class="col-md-6 mb-3" style="padding:15px 3px 0px 3px;">
                            <label for="lastName">Sobrenome</label>
                            <input type="text" class="form-control" id="lastName" placeholder="" value="" required>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3" style="padding:15px 0px 0px 0px;">
                            <label for="lbl_cpf">CPF</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="username" placeholder="CPF" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3" style="padding:15px 3px 0px 3px;">
                            <label for="lbl_cpf">CEP</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="cep" placeholder="CEP" required>
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <label for="address">Endereço</label>
                        <input type="text" class="form-control" id="end" placeholder="Digite Rua, Travessa , Av, Número" required>

                    </div>

                    <div class="row">
                        <label for="address2">Complemento </label>
                        <input type="text" class="form-control" id="compl" placeholder="complemento">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3" style="padding:15px 0px 0px 0px;">
                            <label for="country">País</label>
                            <select class="form-control custom-select" id="country" required>
                                <option value="">Escolha...</option>
                                <option>Brazil</option>
                                <option>...</option>
                                
                            </select>

                        </div>
                        <div class="col-md-6 mb-3" style="padding:15px 3px 0px 3px;">
                            <label for="state">Estado</label>
                            <select class="form-control custom-select" id="state" required>
                                <option value="">Escolha...</option>
                                <option>Minas Gerais</option>
                                <option>Rio de Janeiro</option>
                                <option>São Paulo</option>
                            </select>
                            

                        </div>
                    </div>

                    <hr class="mb-4">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="same-address">
                        <label class="custom-control-label" for="same-address">
                            O endereço cadastrado é o mesmo que o meu endereço do cartão.
                        </label>
                    </div>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="save-info">
                        <label class="custom-control-label" for="save-info">Salve esta informação para a próxima vez</label>
                    </div>
                    <hr class="mb-4">

                    <h4 class="mb-3">Método de pagamento</h4>

                    <div class="d-block my-3">
                        <div class="custom-control custom-radio">
                            <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked required>
                            <label class="custom-control-label" for="cc">Cartão de crédito</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="debit" name="paymentMethod" type="radio" class="custom-control-input" required>
                            <label class="custom-control-label" for="debito">Cartão de débito</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required>
                            <label class="custom-control-label" for="paypal">PayPal</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" required>
                            <label class="custom-control-label" for="boleto">Boleto</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-nome">Nome no cartão</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="" required>
                            <small class="text-muted">Seu nome deve ser digitado conforme no cartão</small>
                            
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="cc-number">Número do cartão de crédito</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="" required>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">Data de expiração</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="" required>
                           
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required>
                           
                        </div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Continuar Checkout</button>
                </form>
            </div>
        </div>





        <div style="padding:15px 0px 0px 0px;">
            <address>
                <strong>Suporte:</strong> <a href="mailto:Support@example.com">4007 1510 Regiões metropolitanas</a><br />
                <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
            </address>
        </div>
